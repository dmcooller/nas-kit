#!/bin/bash

case "$1" in
    start)
        echo "Starting NAS Kit"
        sudo python3 /home/pi/nas-kit/main/raspi_omv_main.py &
        ;;
    stop)
        echo "Stopping NAS Kit"
        kill $(ps aux | grep -m 1 'python3 /home/pi/nas-kit/main/raspi_omv_main.py' | awk '{ print $2 }')
        raspi-gpio set 18 dl
        ;;
    restart)
        echo "Restarting NAS Kit"
        sudo nas-kit stop
        sudo nas-kit start
        ;;
    *)
        echo "Usage: nas-kit start|stop|restart"
        exit 1
        ;;
esac
exit 0
